  title XDonat - Панель управления
// ==============================================================
// main wrapper
// ==============================================================
.dashboard-main-wrapper
  // ==============================================================
  // navbar
  // ==============================================================  
  include dashboard/navbar
  // ==============================================================
  // end navbar
  // ==============================================================
  // ==============================================================
  // left sidebar
  // ==============================================================
  include dashboard/left_sidebar
  // ==============================================================
  // end left sidebar
  // ==============================================================
  // ==============================================================
  // wrapper
  // ==============================================================
  .dashboard-wrapper
    .dashboard-ecommerce
      .container-fluid.dashboard-content
        // ==============================================================
        // pageheader
        // ==============================================================
        .row
          .col-xl-12.col-lg-12.col-md-12.col-sm-12.col-12
            .page-header
              h2.pageheader-title Виджеты
              p.pageheader-text
              .page-breadcrumb
                nav(aria-label='breadcrumb')
                  ol.breadcrumb
                    li.breadcrumb-item
                      a.breadcrumb-link(href='/dashboard') Меню
                    li.breadcrumb-item.active(aria-current='page') Настройка оплаты
        // ==============================================================
        // end pageheader
        // ==============================================================
        if yandexData
          .container
            .col-md-8.col-md-offset-3
              h6.display-6.m-b-2 Яндекс деньги подключены &#10004;
        else
          .container
            .col-md-8.col-md-offset-3
              h6.display-6.m-b-2 Яндекс Деньги

              // Настройка оплаты
              form(method='POST' action='/dashboard/payment_settings')
                div.form-group
                  label(for='address') Адрес кошелька:
                  input#name.form-control(type='text', placeholder='4100...' name='address' maxlength="15")
                div.form-group
                  label(for='Secret Word') Секретное слово:
                  p
                    | 1. Перейдите по 
                    a(href='#') ссылке
                    |  и вставьте туда: https://xdonat.com/wallets/yandex/requests                  
                  p 2. Скопируйте на этой странице 'секрет' и вставьте в поле ниже
                  input#email.form-control(type='text', placeholder='' name='secret')                  
                div.form-group
                  label(for='email') Email:
                  input#email.form-control(type='email', placeholder='papech@email.com' name='email')
                button.btn.btn-primary(type='submit') Отправить

    // ==============================================================
    // footer
    // ==============================================================
    include dashboard/footer
    // ==============================================================
    // end footer
    // ==============================================================
  // ==============================================================
  // end wrapper
  // ==============================================================
// ==============================================================
// end main wrapper
